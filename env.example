# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =============================================================================
# SECRETS MANAGEMENT
# =============================================================================
# Master key for encrypting/decrypting secrets
SECRETS_MASTER_KEY=your_master_key_here

# =============================================================================
# SNOWFLAKE CONFIGURATION - DEVELOPMENT
# =============================================================================
SNOWFLAKE_ACCOUNT_DEV=your_account_locator-dev
SNOWFLAKE_USER_DEV=your_username_dev
SNOWFLAKE_PASSWORD_DEV=your_password_dev
SNOWFLAKE_WAREHOUSE_DEV=dbt_wh_dev
SNOWFLAKE_DATABASE_DEV=dbt_db_dev
SNOWFLAKE_SCHEMA_DEV=dbt_schema_dev
SNOWFLAKE_ROLE_DEV=dbt_role_dev

# =============================================================================
# SNOWFLAKE CONFIGURATION - STAGING
# =============================================================================
SNOWFLAKE_ACCOUNT_STAGING=your_account_locator-staging
SNOWFLAKE_USER_STAGING=your_username_staging
SNOWFLAKE_PASSWORD_STAGING=your_password_staging
SNOWFLAKE_WAREHOUSE_STAGING=dbt_wh_staging
SNOWFLAKE_DATABASE_STAGING=dbt_db_staging
SNOWFLAKE_SCHEMA_STAGING=dbt_schema_staging
SNOWFLAKE_ROLE_STAGING=dbt_role_staging

# =============================================================================
# SNOWFLAKE CONFIGURATION - PRODUCTION
# =============================================================================
SNOWFLAKE_ACCOUNT_PROD=your_account_locator-prod
SNOWFLAKE_USER_PROD=your_username_prod
SNOWFLAKE_PASSWORD_PROD=your_password_prod
SNOWFLAKE_WAREHOUSE_PROD=dbt_wh_prod
SNOWFLAKE_DATABASE_PROD=dbt_db_prod
SNOWFLAKE_SCHEMA_PROD=dbt_schema_prod
SNOWFLAKE_ROLE_PROD=dbt_role_prod

# =============================================================================
# SNOWFLAKE CONFIGURATION - TESTING
# =============================================================================
SNOWFLAKE_ACCOUNT_TEST=your_account_locator-test
SNOWFLAKE_USER_TEST=your_username_test
SNOWFLAKE_PASSWORD_TEST=your_password_test
SNOWFLAKE_WAREHOUSE_TEST=dbt_wh_test
SNOWFLAKE_DATABASE_TEST=dbt_db_test
SNOWFLAKE_SCHEMA_TEST=dbt_schema_test
SNOWFLAKE_ROLE_TEST=dbt_role_test

# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================
AIRFLOW_HOME=/usr/local/airflow
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false

# =============================================================================
# DATABASE CONFIGURATION (for Airflow)
# =============================================================================
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================
# Email configuration for alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Microsoft Teams webhook for alerts
TEAMS_WEBHOOK_URL=https://your_org.webhook.office.com/webhookb2/YOUR/TEAMS/WEBHOOK

# PagerDuty integration key for critical alerts
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# Alert email recipients by severity
ALERT_EMAIL_LOW=low-alerts@yourcompany.com
ALERT_EMAIL_MEDIUM=medium-alerts@yourcompany.com
ALERT_EMAIL_HIGH=high-alerts@yourcompany.com
ALERT_EMAIL_CRITICAL=critical-alerts@yourcompany.com

# =============================================================================
# DATA QUALITY CONFIGURATION
# =============================================================================
# Great Expectations configuration
GE_DATA_CONTEXT_ROOT_DIR=great_expectations
GE_EXPECTATIONS_STORE_BACKEND=filesystem
GE_VALIDATIONS_STORE_BACKEND=filesystem

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Query timeout settings
QUERY_TIMEOUT_SECONDS=300
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_RETENTION_DAYS=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption settings
ENCRYPT_CONNECTIONS=true
ROTATE_SECRETS_DAYS=90
AUDIT_LOGGING=true

# =============================================================================
# ENVIRONMENT SPECIFIC SETTINGS
# =============================================================================
# Current environment (development, staging, production, testing)
ENVIRONMENT=development

# dbt configuration
DBT_TARGET=dev
DBT_THREADS=2

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Codecov token for coverage reporting
CODECOV_TOKEN=your_codecov_token

# GitHub token for CI/CD
GITHUB_TOKEN=your_github_token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_DATA_QUALITY_CHECKS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_AUDITING=true
ENABLE_AUTOMATED_ALERTING=true
